<table>
  <% book.book_comments.each do |book_comment| %>
  <tr>
    <td>
      <%= link_to(book_comment.user) do %>
      <%= image_tag book_comment.user.get_profile_image(50, 50) %>
      <div>
        <%= book_comment.user.name %>
      </div>
      <% end %>
    </td>
    <td>
      <%= book_comment.comment %>
    </td>
    <td>
      <% if book_comment.user == current_user %>
        <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, data: { confirm: "削除しますか？", "turbolinks" => false}, class: "btn btn-sm btn-danger", remote: true %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>